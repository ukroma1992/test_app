<%= simple_form_for(@team) do |f| %>
  <%= f.error_notification %>
  <div class="form-inputs">
    <%= f.input :name, label: "Имя команды" %>
    <%= f.label "Логотип команды" %>
    <br/>
    <img alt="photo" height="100px" src="<%= @team.photo.url %>" width="100px"/>
    <br>
    <hr>
    <%= f.file_field :photo %>
  </div>
  <div class="form-actions pull-right">
    <%= f.submit "Подтвердить" %>
  </div>
<% end %>
